
<% layout('layout/boilerplate') %> 
    <h1>All Campground</h1>
    <div>
        <a href="/campgrounds/new">add campgrounds</a>
    </div>

<% for (let camp of campground) { %> 
    <div class="card mb-3">
        <div class="row">
             <div class="col-md-4">
                <img class ="img-fluid" src="../../images/camp.jpg" alt="image">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %></h5>
                    <p class="card-text"> <%= camp.description %> </p>
                    <p class="card-text">
                        <small class='text-muted'> <%= camp.location %></small>
                    </p>
                    <p>
                        <a class='btn btn-primary' href="/campgrounds/<%= camp.id %> "> View <%= camp.title %></a>
                    </p>
                </div>
            </div>
        </div>
    </div>
<% } %> 
  